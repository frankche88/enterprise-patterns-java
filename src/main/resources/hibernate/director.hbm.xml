<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="app.movies.domain.entity.Director" table="director">
        <id name="director_id" type="long" >
            <column name="id" not-null="true"/>
        </id>

        <property name="identity_document" type="string">
            <column name="identityDocument" length="20" not-null="true" />
        </property>
        
        <property name="director_name" type="string">
            <column name="name" length="50" not-null="true" />
        </property>
        
    </class>
</hibernate-mapping>
