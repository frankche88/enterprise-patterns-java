<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="app.movies.domain.entity.Director" table="director">
        <id name="id" type="long" >
            <column name="director_id" not-null="true"/>
        </id>

        <property name="identityDocument" type="string">
            <column name="identity_document" length="20" not-null="true" />
        </property>
        
        <property name="name" type="string">
            <column name="director_name" length="50" not-null="true" />
        </property>
        
    </class>
</hibernate-mapping>
